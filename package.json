{
  "name": "dependabot-combine",
  "version": "0.1.2",
  "description": "Combine dependabot PRs into a single branch.",
  "main": "lib/index.js",
  "author": "Francesco Novy <francesconovy@gmail.com>",
  "repository": "https://github.com/mydea/dependabot-combine",
  "license": "MIT",
  "private": false,
  "type": "module",
  "bin": {
    "dependabot-combine": "./bin/dependabot-combine.js"
  },
  "directories": {
    "bin": "./bin",
    "lib": "./lib"
  },
  "exports": {
    ".": "./lib/index.js",
    "./lib": "./lib/index.js",
    "./lib/*": "./lib/*.js"
  },
  "scripts": {
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "commander": "^10.0.0",
    "minimatch": "^5.1.0",
    "simple-git": "^3.7.1",
    "yarn-update-dependency": "0.7.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.2",
    "eslint": "^8.16.0",
    "fabscale-eslint-config": "^1.4.0",
    "prettier": "^2.6.2",
    "release-it": "^14.11.6",
    "release-it-lerna-changelog": "^4.0.1"
  },
  "engines": {
    "node": ">= 16"
  },
  "volta": {
    "node": "16.15.1",
    "yarn": "1.22.18"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md"
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    }
  }
}
